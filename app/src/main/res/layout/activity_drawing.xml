<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/drawable_nodraw"
    tools:context="com.github.beraboris.boxes.app.DrawingActivity">

    <com.github.beraboris.boxes.app.CanvasView
            android:id="@+id/canvas"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="99"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"/>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@color/drawable_nodraw"
            android:orientation="vertical">

        <ImageButton
                android:id="@+id/other_picture_btn"
                style="@style/drawing_control"
                android:src="@drawable/image"
                android:contentDescription="@string/drawing_view_original"
                android:background="@null"/>
        <ImageButton
                android:id="@+id/pick_color_btn"
                style="@style/drawing_control"
                android:src="@drawable/droplet"
                android:contentDescription="@string/drawing_pick_color"
                android:background="@null"/>
        <ImageButton
                android:id="@+id/pick_brush_btn"
                style="@style/drawing_control"
                android:src="@drawable/brush"
                android:contentDescription="@string/drawing_pick_size"
                android:background="@null"/>
        <ImageButton
                android:id="@+id/cancel_btn"
                style="@style/drawing_control"
                android:src="@drawable/x"
                android:contentDescription="@string/cancel"
                android:background="@null"/>
        <ImageButton
                android:id="@+id/submit_btn"
                style="@style/drawing_control"
                android:src="@drawable/check"
                android:contentDescription="@string/submit"
                android:background="@null"/>

    </LinearLayout>

</LinearLayout>
