<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="#000"
             android:paddingBottom="@dimen/activity_vertical_margin"
             android:paddingTop="@dimen/activity_vertical_margin"
             android:paddingLeft="@dimen/activity_horizontal_margin"
             android:paddingRight="@dimen/activity_horizontal_margin"
             tools:context="com.github.beraboris.boxes.app.ColorWheelDialogFragment">

    <com.github.beraboris.boxes.app.HueSaturationWheelView
            android:id="@+id/hue_saturation_wheel"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="80"/>
    <com.github.beraboris.boxes.app.ValueSliderView
            android:id="@+id/value_slider"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_weight="20"
            android:layout_width="0dp"
            android:layout_height="fill_parent"/>
</LinearLayout>
