<resources>

    <!-- Base application theme. -->
    <style name="standard" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="fullscreen" parent="android:Theme.Holo.Light.NoActionBar.Fullscreen"/>

    <style name="drawing_control">
        <item name="android:layout_width">@dimen/drawing_button_width</item>
        <item name="android:layout_height">@dimen/drawing_button_height</item>
    </style>

    <style name="dialog" parent="android:Theme.Holo.Light.Dialog">
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
    </style>

</resources>
